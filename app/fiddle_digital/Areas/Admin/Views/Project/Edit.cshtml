@model fiddle_digital.ViewModels.ProjectCVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>ProjectCVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectLink" class="control-label"></label>
                <input asp-for="ProjectLink" class="form-control" />
                <span asp-validation-for="ProjectLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectLinkTitle" class="control-label"></label>
                <input asp-for="ProjectLinkTitle" class="form-control" />
                <span asp-validation-for="ProjectLinkTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoFile" class="control-label"></label>
                @Images.UploadImage(nameof(Model.VideoFile))
                <input asp-for="VideoLink" class="form-control" style="display:none" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BehanceLink" class="control-label"></label>
                <input asp-for="BehanceLink" class="form-control" />
                <span asp-validation-for="BehanceLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BannerPhotoPath" class="control-label"></label>
                @Images.UploadImage(nameof(Model.BannerPhotoFile), Model.BannerPhotoPath)
                <span asp-validation-for="BannerPhotoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreviewPhotoPath" class="control-label"></label>
                @Images.UploadImage(nameof(Model.PreviewPhotoFile), Model.PreviewPhotoPath)
                <span asp-validation-for="PreviewPhotoPath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDisabled" /> @Html.DisplayNameFor(model => model.IsDisabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SOrder" class="control-label"></label>
                <input asp-for="SOrder" class="form-control" />
                <span asp-validation-for="SOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="BannerPhotoPath" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="PreviewPhotoPath" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
                @ButtonHelpers.CancelBtn("Admin", nameof(ProjectController), nameof(ProjectController.List), "btn btn-default")
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}